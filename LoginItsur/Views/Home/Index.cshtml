@{
    ViewData["Title"] = "Login";
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow  ">
                <div class="row g-0">
                    <div class="col-md-6 text-center">
                        <h3>Bienvenido de vuelta</h3>
                       
                        <div class="card-body">
                            <form>
                                <div class="form-group mb-3">
                                    <label for="email">Correo electrónico</label>
                                    <input type="email" class="form-control" id="email" placeholder="Ingresa tu correo" />
                                </div>
                                <div class="form-group mb-3">
                                    <label for="password">Contraseña</label>
                                    <input type="password" class="form-control" id="password" placeholder="Ingresa tu contraseña" />
                                </div>
                                <div class="form-group form-check mb-3">
                                    <input type="checkbox" class="form-check-input" id="rememberMe" />
                                    <label class="form-check-label" for="rememberMe">Recordar mi sesión</label>
                                </div>
                                <button type="submit" class="btn btn-primary w-100">Iniciar sesión</button>
                            </form>
                        </div>
                        <div class="text-center">
                            <p class="mb-0"><a href="#" class="text-decoration-none">¿Olvidaste tu contraseña?</a></p>
                        </div>
                    </div>
                    <div class="col-md-6 d-flex align-items-center justify-content-center">
                        <img src="~/imagenes/logoItsur.png" alt="Imagen Lateral" class="img-fluid" style="max-height: 100%; width: auto;" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>