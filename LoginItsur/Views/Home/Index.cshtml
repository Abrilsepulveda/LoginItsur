@{
    ViewData["Title"] = "Login";
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <img src="~/imagenes/logoItsur.png" alt="ITSUR Logo" class="img-fluid mb-3" style="max-width: 100px;" />
                    <h3>Bienvenido de vuelta</h3>
                </div>
                <div class="card-body">
                    <form>
                        <div class="form-group mb-3">
                            <label for="email">Correo electrónico</label>
                            <input type="email" class="form-control" id="email" placeholder="Ingresa tu correo" />
                        </div>
                        <div class="form-group mb-3">
                            <label for="password">Contraseña</label>
                            <input type="password" class="form-control" id="password" placeholder="Ingresa tu contraseña" />
                        </div>
                        <div class="form-group form-check mb-3">
                            <input type="checkbox" class="form-check-input" id="rememberMe" />
                            <label class="form-check-label" for="rememberMe">Recordar mi sesión</label>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Iniciar sesión</button>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <p><a href="#">¿Olvidaste tu contraseña?</a></p>
                </div>
                <div class="card-body text-center">
                    <img src="~/imagenes/logoItsur.png" alt="Imagen Lateral" class="img-fluid" style="max-height: 200px; width: auto;" />
                </div>
            </div>
        </div>
    </div>
</div>